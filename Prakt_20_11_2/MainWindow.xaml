<Window x:Class="Prakt_20_11_2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Prakt_20_11_2"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <ToolBar VerticalAlignment="Top" Margin="60 0 60 0">
            <Button Content="File"></Button>
            <Button Content="Open"></Button>
            <Button Content="Save"></Button>
        </ToolBar>
<ToolBar HorizontalAlignment="Left">
            <StackPanel Orientation="Vertical">
                <Button Content="File"></Button>
                <Button Content="Open"></Button>
                <Button Content="Save"></Button>
            </StackPanel>
        </ToolBar>
        <ToolBar VerticalAlignment="Bottom" Margin="60 0 60 0">
            <TextBlock Name="timeTextBlock" VerticalAlignment="Center"/>
        </ToolBar>
    </Grid>
</Window>
